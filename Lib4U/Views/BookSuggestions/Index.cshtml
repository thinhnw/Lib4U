@model IEnumerable<Lib4U.Models.BookSuggestion>

<div class="d-flex justify-content-between">    
    <h2 class="my-3">
        Book Suggestions
    </h2>
    <a href="@Url.Action("Create")" class="btn btn-primary my-3">Create New</a>   
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishcationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReasonForSuggestion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishcationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReasonForSuggestion)
        </td>
        <td>            
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Complete", "Complete", new { id=item.Id })
        </td>
    </tr>
}

</table>
