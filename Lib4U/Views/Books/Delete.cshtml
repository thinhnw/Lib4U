@model Lib4U.Models.Book

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Publisher.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            <img src="@Url.Content(Model.Image)" height="150" width="150" />
        </dd>

        <dt>
            <label class="control-label col-md-2" for="Total_pages">Total Pages</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total_pages)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            <div class="star">
                @for (decimal i = 0; i < Math.Round(Model.Rating); i++)
                {
                    <span class="star-rate"></span>
                }
                @for (decimal i = Math.Round(Model.Rating); i < 5; i++)
                {
                    <span class="star-box"></span>

                }
            </div>
        </dd>

        <dt>
            <label class="control-label col-md-2" for="Published_date">Published Date</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Published_date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            <label class="control-label col-md-2" for="AvailableQuantity">Available Quantity</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AvailableQuantity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
